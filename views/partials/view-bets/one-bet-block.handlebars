<div class="card">
	<div class="card-body">
		<div class="row">

			<!-- the left side of the bet card -->
			<div class="col-md-5">
				<div class="row">
					<div class="col-md-4">
						<span class="badge rounded-pill bg-warning text-dark"><button type="button" class="upvote" data-id="{{data.id}}" data-vote="1"><i class="fas fa-thumbs-up fa-flip-horizontal"></i> {{data.votes1}} upvotes</button></span>
					</div>
					<div class="col-md-4">
						<p><u>{{data.user1}}</u> bet they can watch the entire Netflix catalogue in a year.</p>
					</div>
					<div class="col-md-4">
						<span class="badge rounded-pill bg-light text-dark">
							avatar and name {{data.user1}}
						</span>
					</div>
				</div>
			</div>

			<!-- the centre of the bet card -->
			<div class="col-md-2 d-flex justify-content-center">
				<div class="row">
					<div class="col-md-12">
						<h1 class="heading-centered">V</h1>
						<button type="button" class="btn btn-primary">
							{{data.wager}}
						</button>
					</div>
				</div>
			</div>

			<!-- the right side of the bet card.-->
			<div class="col-md-5">
				<div class="row">
					<div class="col-md-4">
						<span class="badge rounded-pill bg-light text-dark">
							avatar and name {{data.user2}}
						</span>

					</div>

					<div class="col-md-4">
						<p>This bet is pending. (status={{data.status}})</p>
					</div>

					<div class="col-md-4">
						<span class="badge rounded-pill bg-warning text-dark"><button type="button" class="upvote" data-id="{{data.id}}" data-vote="2"><i class="fas fa-thumbs-up"></i> {{data.votes2}} upvotes</button></span>
					</div>

				</div>
			</div>

		</div>
	</div>
</div>